@using CinemaPro.Models.TMDB
@model SearchMovies

@{
    ViewData["Title"] = "CinemaPro";
}

<h2 class="text-center">Search Results</h2>

<section class="px-4">
    <div class="row">
        @foreach (var movie in Model.results)
        {
            <div class="col-sm-3 mb-2">
                <div class="card text-white bg-dark" style="width: 18rem;">
                    <img src="@movie.poster_path" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title clampTitle">@movie.title</h5>
                        <p class="card-text clampOverview">@movie.overview</p>
                        <div class="d-grid">
                            <a asp-action="Details" asp-controller="Movies" asp-route-id="@movie.id" class="btn btn-large btn-dark fw-bold">Details</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</section>

<section class="px-4">
    <div class="row">
        @foreach (var movie in Model.results)
        {
            <div class="col-sm-3 mb-2">
                <div class="card text-white bg-dark" style="width: 18rem;">
                    <img src="@movie.poster_path" class="card-img" alt="...">
                    <div class="card-img-overlay">
                    </div>
                </div>
            </div>
        }
    </div>
</section>